// This is your Prisma schema file for Cloudflare D1
// D1 uses SQLite, so we use the sqlite provider

generator client {
  provider = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  creator     Int
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("projects")
}

model TaskModel {
  id             Int       @id @default(autoincrement())
  projectId      Int?      @map("project_id")
  title          String
  description    String?
  priority       String    @default("mid") // low, mid, high, urgent
  taskStatus     String    @default("pending") @map("task_status") // pending, in_progress, completed, failed, hold
  submissionDate DateTime? @map("submission_date")
  executionDate  DateTime? @map("execution_date")
  completionDate DateTime? @map("completion_date")
  totalDuration  Int?      @default(0) @map("total_duration") // Duration in minutes
  assignedTo     Int?      @map("assigned_to")
  comment        String?
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@map("tasks")
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
